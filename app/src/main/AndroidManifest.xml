<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dp.schoolandroid">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.StudentLoginActivity" />
        <activity android:name=".view.ui.activity.ParentLoginActivity" />
        <activity android:name=".view.ui.activity.TeacherLoginActivity" />
        <activity android:name=".view.ui.activity.TopStudentDetailsActivity" />
        <activity android:name=".view.ui.activity.FeedDetailsActivity" />
        <activity android:name=".view.ui.activity.HomeActivity" />
        <activity android:name=".view.ui.activity.PaymentActivity" />
        <activity android:name=".view.ui.activity.ConnectionErrorActivity" />
        <activity android:name=".view.ui.activity.ClassActivity" />
        <activity android:name=".view.ui.activity.CalendarActivity" />
        <activity
            android:name=".view.ui.activity.ChatActivity"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".view.ui.activity.ParentHomeActivity" />
        <activity android:name=".view.ui.activity.ProfileActivity" />
        <activity android:name=".view.ui.activity.StudentsActivity" />
        <activity android:name=".view.ui.activity.StudentGradeActivity"/>
    </application>

</manifest>