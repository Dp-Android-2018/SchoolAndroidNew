<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dp.schoolandroid.view.ui.fragment.BaseFragment">

    <include
        android:id="@+id/include3"
        layout="@layout/my_custom_bar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/layer_11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/riv_teacher_photo"
        android:layout_width="@dimen/dp100w"
        android:layout_height="@dimen/dp100w"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/layer_14"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:sriv_border_color="@color/colorGray"
        app:sriv_border_width="@dimen/dp5w"
        app:sriv_oval="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/dp35w"
        android:layout_height="@dimen/dp35w"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/picker"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_add_photo"
        app:layout_constraintBottom_toBottomOf="@+id/riv_teacher_photo"
        app:layout_constraintEnd_toEndOf="@+id/riv_teacher_photo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/riv_teacher_photo"
        app:layout_constraintTop_toTopOf="@+id/riv_teacher_photo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:text="Mohammed Said"
        android:textColor="@color/colorWhite"
        android:textSize="17.7sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riv_teacher_photo" />

    <TextView
        android:id="@+id/tv_teacher_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:text="mohamed_said250@yahoo.com"
        android:textColor="@color/colorWhite"
        android:textSize="12.3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher_name" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/layer_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="13.3dp"
        android:textColor="#8d8f9b"
        android:textSize="22.7sp"
        android:text="There are no lectures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</android.support.constraint.ConstraintLayout>
